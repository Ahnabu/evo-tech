{
  "name": "evo-tech-backend",
  "version": "1.0.0",
  "description": "Evo-Tech E-commerce Backend with Node.js, Express, and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "seed:orders": "ts-node-dev --transpile-only src/seedOrders.ts",
    "seed:orders:clear": "ts-node-dev --transpile-only src/seedOrders.ts --clear",
    "seed:permissions": "ts-node-dev --transpile-only database/seeders/seedPermissions.ts",
    "clear:staff-permissions": "ts-node-dev --transpile-only database/seeders/clearStaffPermissions.ts",
    "migrate:permissions-objectid": "ts-node-dev --transpile-only database/migrations/migratePermissionsToObjectId.ts",
    "test:permission-lookup": "ts-node-dev --transpile-only database/testPermissionLookup.ts",
    "list:collections": "ts-node-dev --transpile-only database/listCollections.ts",
    "diagnose:permissions": "ts-node-dev --transpile-only database/diagnosePermissions.ts",
    "test:permission-api": "ts-node-dev --transpile-only database/testPermissionAPI.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "mongodb",
    "ecommerce"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^1.4.12",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "multer": "^2.0.2",
    "slugify": "^1.6.6",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
